<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= page_title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- コンテナ開始 -->
  <div class="container">
    <!-- ヘッダ開始 -->
    <div id="header">
      <%= render "shared/header" %>
    </div>
    <!-- ヘッダ終了 -->
    <!-- サイドバー開始 -->
    <div id="sidebar">
      <%= render "shared/sidebar" %>
    </div>
    <!-- サイドバー終了 -->
    <!-- メインカラム開始 -->
    <div id="contnet">
      <%= yield %>
    </div>
    <!-- メインカラム終了 -->
    <!-- フッター開始 -->
    <div id="footer">
      <%= render "shared/footer" %>
    </div>
    <!-- フッター終了 -->
  </div>
  <!-- コンテナ終了 -->
</body>
</html>
